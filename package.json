{
  "name": "keybind",
  "version": "0.1.0",
  "description": "A Typescript library for easily binding keyboard keys",
  "main": "index.js",
  "scripts": {
    "build": "node ./scripts/build-core.js",
    "lint": "eslint --ignore-path .eslintignore ./packages/*/**.ts",
    "lint:fix": "eslint --ignore-path .eslintignore ./packages/*/**.ts --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "simple-git-hooks"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@longo-andrea/eslint-config-typescript": "^0.2.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "esbuild": "^0.15.14",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.28.0",
    "simple-git-hooks": "^2.8.1"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm lint:fix"
    ],
    "*.{js,ts,json}": [
      "pnpm format"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  }
}
